    "n=4\n",
    "def recursionFactorial(n):\n",
    "    if n<0:\n",
    "        return \"Error\"\n",
    "    if n==1 or n==0:\n",
    "        return 1\n",
    "    return n * recursionFactorial(n-1)\n",
    "print (recursionFactorial(n))"
